<div class='col-sm-9'>
  <div class='panel panel-primary' id='items-panel'>
    <div class='panel-heading'>{{{controller.feed.title}}}
      {{#if controller.feed.description}}- {{{controller.feed.description}}}{{/if}}
      <!-- Refresh Button -->
      <button class='btn btn-xs btn-success pull-right' {{action 'refresh'}}>
        <span class='glyphicon glyphicon-refresh {{if isReloading "spinning" ""}}'></span>
      </button>
    </div>
    <div class='panel-body'>
      <table class='table table-condensed table-striped'><tbody>
      {{#each model as |item|}}
        {{#link-to 'feeds.feed.feeditems.feeditem' feed.id item.id tagName='tr'}}
          {{#link-to 'feeds.feed.feeditems.feeditem' feed.id item.id tagName='td'}}
            {{#link-to 'feeds.feed.feeditems.feeditem' feed.id item.id}}{{{item.title}}}{{/link-to}}
          {{/link-to}}
        {{/link-to}}
      {{/each}}
      </tbody></table>
    </div>
  </div>
</div>
{{! Feed Item }}
{{outlet}}
